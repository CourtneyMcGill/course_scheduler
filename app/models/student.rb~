class Student < ActiveRecord::Base
  has_many :courses


  def self.sorted_by(field)
	if self.column_names.include?(field)
       	  self.order(field)
        else
          self.order("last")
        end
  end

  def self.search(string)
        if Student.where("first like ?", "%#{string}%")
          Student.where("first like ?", "%#{string}%")
        elsif Student.where("last like ?", "%#{string}%")
          Student.where("last like ?", "%#{string}%")
        else Student.where("sid like ?", "%#{string}%")
          Student.where("sid like ?", "%#{string}%")
        end
  end

end
