#main
  %h3= @student.first 
  %h3= @student.last

  %table.students_table
    %thead
      %tr.students_header
        %th First
        %th Last
        %th Student ID
        %th Year
        %th Major
        %th Courses Taken
        %th Courses Progress
    %tbody
      %tr
        %td= @student.first
        %td= @student.last
        %td= @student.sid
        %td= @student.year
        %td= @student.major
        %td= @student.courses_taken
        %td= @student.courses_progress

  %p= link_to("Edit Student details", edit_student_path)
  %p= link_to("Delete student", student_path(@student, :method => :delete))

