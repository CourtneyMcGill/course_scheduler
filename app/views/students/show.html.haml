#main
  %h3= @student.first+" "+@student.last

  %table.students_table
    %thead
      %tr.students_header
        %th Student ID
        %th Year
        %th Major
    %tbody
      %tr
        %td= @student.sid
        %td= @student.year
        %td= @student.major

  %table.courses_table
    %thead
      %tr.courses_header
        %th Course Name
        %th CRN
    %tbody
    -@student.courses.each do |c|
      %tr
        %td=c.course_name
        %td=c.crn

  %p= link_to("Edit Student details", edit_student_path)
  %br
  %td= link_to "Delete student", students_path, :method => :delete

%p= link_to "Back to students list", students_path
