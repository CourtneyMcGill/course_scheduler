#main
  %h3= @student.first+" "+@student.last

  %table.students_table
    %thead
      %tr.students_header
        %th Student ID
        %th Year
        %th Major
    %tbody
      %tr
        %td= @student.sid
        %td= @student.year
        %td= @student.major

  %table.courses_table
    %thead
      %tr.courses_header
        %th Course Name
        %th CRN
    %tbody
    -@student.courses.each do |c|
      %tr
        %td=c.course_name
        %td=c.crn
  %br
  %p.btn.btn-default= link_to("Edit Student details", edit_student_path)
  %br
  %td= button_to "delete", @student, :method => :delete, :class=>:destroy

