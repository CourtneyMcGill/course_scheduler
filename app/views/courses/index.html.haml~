#main

  .searchbox
    =form_tag courses_path, method: :get do
      =label_tag "courses_search"
      =text_field_tag "courses_search", nil, maxlengh: 20
      =submit_tag "Find courses"

  =form 
    %p=f.label :dept
    %p=f.text_field :dept

    %p=f.label :core
    %p=f.text_field :core

    %p=f.label :inquiry
    %p=f.text_field :inquiry

    %p=f.label :instructor
    %p=f.text_field :instructor

    %p=f.label :days
    %p=f.text_field :days

    %p=f.label :starts_after
    %p=f.number_field :starts_after, :in => 100..1259

    %p=f.label :ends_before
    %p=f.number_field :ends_before, :in => 100..1259

    %p=f.label :level
    %p=f.text_field :level

    %p=f.label :credits
    %p=f.number_field :credits, :in => 0.0..1.0

    %p=f.submit

  %h3 Course Listings

  %table.courses_table
    %tr.courses_header
      %th= link_to "CRN", courses_path(sort: 'crn')
      %th= link_to "Course Name", courses_path(sort: 'course_name')
      %th= link_to "Title", courses_path(sort: 'title')
      %th= link_to "Instructor", courses_path(sort: 'instructor')
      %th Days
      %th= link_to "Starts", courses_path(sort: 'starts')
      %th= link_to "Ends", courses_path(sort: 'ends')
      %th= link_to "Building/Room", courses_path(sort: 'building_room')
      %th= link_to "Credits", courses_path(sort: 'credits')
      %th Co-Reqs
      %th CrossList
      %th Restrictions
      %th Pre-Reqs
      %th Notes
    -@courses.each do |c|
      %tr
        %td= c.crn
        %td= link_to "#{c.course_name}", course_path(c)
        %td= c.title
        %td= c.instructor
        %td= c.days
        %td= c.starts
        %td= c.ends
        %td= c.building_room
        %td= c.credits
        %td= c.coreq
        %td= c.crosslist
        %td= c.restrictions
        %td= c.prereq
        %td= c.notes
  %td= link_to "Create a new course", new_course_path
  %br
  %p= link_to("Back to administrator options", root_path)
