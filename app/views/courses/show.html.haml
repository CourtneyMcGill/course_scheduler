#main
  %h3
    =precede "Course details for " do
      %span= @course.title

  %table.courses_table
    %th Course
    %th Title
    %th Instructor
    %th Days
    %th Starts
    %th Ends
    %tr
      %td= @course.course_name
      %td= @course.title
      %td= @course.instructor
      %td= @course.days
      %td= @course.starts
      %td= @course.ends
  %tr
  %td= link_to "Edit the existing course", edit_course_path
  %br
  %td= link_to "Delete course", courses_path, :method => :delete
  %br
  %td= link_to "Back to course catalog", courses_path
  



