#main

  %h3 Add #{@student.first} to courses
  %p=flash[:notice]
  %table.courses_table
    %tr.courses_header
      %th
      %th= link_to "CRN", courses_path(sort: 'crn')
      %th= link_to "Course Name", courses_path(sort: 'course_name')
      %th= link_to "Instructor", courses_path(sort: 'instructor')
    -@courses.each do |c|
      %tr
        %td= button_to "Add #{@student.first}", action: "create", course_id: c.id, method: :post
        %td= c.crn
        %td= link_to "#{c.course_name}", course_path(c)
        %td= c.instructor
       
  %td= link_to "Done adding student to courses", student_path(@student)

